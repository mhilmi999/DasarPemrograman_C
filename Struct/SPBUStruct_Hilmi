#include <stdio.h>
/*
Author by   : Muhammad Hilmi Ramadhan
Student ID  : 05311940000044
Chapter     : Struct 
Instruction : Buatlah program penerapan dari struct dan fungsi

Program Struk/Bon Pembelian Bensin di SPBU Pertamina Arief Rahman Hakim.
*/
struct penjualan // Inisialisasi struct yang akan digunakan
{
    float liter;
    float hasil;
    int n;
};

void tampil(struct penjualan bensin) // Fungsi menampilkan struk/bon/bill pembelian bensin
{
    printf("Liter         : %.2f\n", bensin.liter);
    printf("Harga/Liter    : Rp. %.f\n", bensin.hasil / bensin.liter);
    printf("Total         : Rp. %.f\n", bensin.hasil);
    printf("========================================\n");
    printf("Terima kasih dan selamat jalan");
}

int main() // Fungsi main terdapat logika dalam penampilan struk/bon/bill pembelian bensin
{
    struct penjualan bensin;
    printf("Penjualan SPBU Arief Rahman Hakim\n");
    printf("\n1.Pertamax\n 2.Pertamax Turbo\n 3.Premium\n 4.Pertamina Dex\n 5.Pertalite\n 6.Dexlite\nMasukan jenis bahan bakar yang ingin dibeli: ");

    scanf("%d", &bensin.n); // Pilihan jenis bahan bakar dari pengguna
    printf("Masukan pembelian perliter : ");
    scanf("%f", &bensin.liter); // Banyaknya perliter bahan bakar yang akan di beli

    printf("\n\n\n\n");
    printf("PETAMINA\n");
    printf("SPBU 54.061.46\nJln. Arief Rahman Hakim No.150, Keputih\nTlp.  0813-3669-8016\n");
    printf("----------------------------------------\n");

    {
        if (bensin.n == 1) // Jika memilih pertamax
        {
            bensin.hasil = 8050 * bensin.liter;
            printf("Jenis Bahan Bakar     : Pertamax\n");
        }
        else if (bensin.n == 2) // Jika memilih pertamax turbo
        {
            bensin.hasil = 9050 * bensin.liter;
            printf("Jenis Bahan Bakar     : Pertamax Turbo\n");
        }
        else if (bensin.n == 3) // Jika memilih premium
        {
            bensin.hasil = 6550 * bensin.liter;
            printf("Jenis Bahan Bakar     : Premium\n");
        }
        else if (bensin.n == 4) // Jika memilih pertamina dex
        {
            bensin.hasil = 8400 * bensin.liter;
            printf("Jenis Bahan Bakar     : Pertamina Dex\n");
        }
        else if (bensin.n == 5) // Jika memilih pertalite
        {
            bensin.hasil = 7350 * bensin.liter;
            printf("Jenis Bahan Bakar     : Pertalite\n");
        }
        else if (bensin.n == 6) // Jika memilih dexlite
        {
            bensin.hasil = 7200 * bensin.liter;
            printf("Jenis Bahan Bakar     : Dexlite\n");
        }
    }
    tampil(bensin); // Pemanggilan fungsi yang menampilkan dari bill pembelian bensin
}
